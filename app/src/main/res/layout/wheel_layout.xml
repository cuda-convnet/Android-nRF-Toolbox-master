<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="100dp">

    <no.nordicsemi.android.nrftoolbox.widget.WheelView
        android:id="@+id/wheelView"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        app:itemNumber="5"
        app:lineColor="@android:color/holo_blue_dark"
        app:lineHeight="1.5dp"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="@android:color/holo_green_light"
        app:normalTextSize="18sp"
        app:selectedTextColor="@android:color/holo_green_dark"
        app:selectedTextSize="22sp"
        app:unitHight="42dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="厘米"
        android:textColor="#00ff00"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_ext"
        android:layout_toRightOf="@+id/wheelView"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        />

</RelativeLayout>